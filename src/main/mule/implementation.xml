	<sub-flow name="create-user-subflow" doc:id="6f0af488-68bd-4bc2-98b9-f696ea063088" >
		<set-variable value='#["INSERT INTO user (email, firstName, lastName, manager_id, street, city, dob, updated_at)&#10;VALUES (:email, :firstName, :lastName, :manager_id, :street, :city, :dob, NOW());"]' doc:name="sqlQuerry" doc:id="ac47f652-1f27-4d97-9b65-966b76a9f985" variableName="sqlQuerry" />
		<set-variable value='#[{&#10;  "email": payload.email,&#10;  "firstName": payload.firstName,&#10;  "lastName": payload.lastName,&#10;  "manager_id": payload.manager_id,&#10;  "street": payload.address.street,&#10;  "city": payload.address.city,&#10;  "dob": payload.dob,&#10;  "updated_at": payload.updated_at&#10;}]' doc:name="inputParams" doc:id="2a3cafed-6008-4999-ba99-cb4eda46fa73" variableName="inputParams"/>
		<try doc:name="Try" doc:id="97f3473b-7e8c-4ccc-a004-409e51808a9d" >
			<flow-ref doc:name="insertdb-subflow" doc:id="003cc3b5-23fa-46d4-9b2f-b133ed937f70" name="insertdb-subflow" />
			<error-handler >
				<on-error-continue enableNotifications="true" logException="true" doc:name="On Error Continue" doc:id="5b903ff6-12ff-46f0-8f66-54338d940555" type="DB:QUERY_EXECUTION">
					<set-payload value="#[payload == false]" doc:name="Set Payload == false" doc:id="969956cc-348c-4227-b346-7bdc7477fefc" />
				</on-error-continue>
			</error-handler>
		</try>
		<ee:transform doc:name="fail Function" doc:id="6800570b-6563-45a9-aec7-36a4b91c4a55" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0 
output application/json
import * from dw::Runtime
fun userNotFound(message) = if(payload == false)
fail("User Not Found")
else
payload
---
try(() ->userNotFound(payload))
]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<choice doc:name="Create or Error" doc:id="ba9ac53f-cb2e-4eba-9b60-5b1dbc5c19f8">
			<when expression="payload.success == true">
				<ee:transform doc:name="set Output" doc:id="5572eea2-84da-469d-bd3a-96d59872058e">
					<ee:message>
						<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  "message": "User Successfully Created"
}
]]></ee:set-payload>
					</ee:message>
				</ee:transform>
			</when>
			<otherwise>
				<set-variable value="409" doc:name="httpStatus" doc:id="189c3930-d39a-4d22-b598-153588213f38" variableName="httpStatus" />
